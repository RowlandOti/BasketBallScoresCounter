<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/scores_title_container"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/apptheme_accent_red">

        <TextView
            android:id="@+id/scores_team_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Team A"
            android:textColor="@color/apptheme_primary_text_white"
            android:textIsSelectable="true"
            android:textSize="16sp"
            tools:text="Team A" />

    </RelativeLayout>

    <TextView
        android:id="@+id/scores_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/score_text_margin"
        android:layout_weight="2"
        android:gravity="center"
        android:text="0"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/apptheme_accent_teal"
        android:textSize="@dimen/score_text_size"
        tools:text="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/score_3_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/apptheme_accent_red"
            android:padding="4dp"
            android:text="@string/score3"
            android:textColor="@color/apptheme_primary_text_white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/score_1_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/apptheme_accent_teal"
                android:padding="4dp"
                android:text="@string/score1"
                android:textColor="@color/apptheme_primary_text_white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/score_2_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/apptheme_accent_teal"
                android:padding="4dp"
                android:text="@string/score2"
                android:textColor="@color/apptheme_primary_text_white"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
